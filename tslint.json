{
    "rules": {
        "array-type": [true, "array"],
        "arrow-return-shorthand": [true, "multiline"],
        "await-promise": true,
        "ban": [
            true,
            "eval",
            {
                "name": ["*", "bind"],
                "message": "Native? Use an arrow function. jQuery? Use .on()"
            },
            { "name": "isNaN", "message": "Use the more strict Number.isNaN" },
            {
                "name": "isFinite",
                "message": "Use the more strict Number.isFinite"
            },
        ],
        "ban-comma-operator": true,
        "callable-types": true,
        "class-name": true,
        "comment-format": { "options": ["check-space"] },
        "curly": [true, "ignore-same-line"],
        "deprecation": true,
        "early-exit": [true, { "max-length": 4 }],
        "interface-over-type-literal": true,
        "jsdoc-format": [true, "check-multiline-start"],
        "jsx-ban-props": [ true, [ ] ],
        "jsx-boolean-value": [true, "never"],
        "jsx-self-close": true,
        "member-access": [true, "check-accessor", "check-parameter-property"],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "protected-static-field",
                    "private-static-field",
                    "public-static-method",
                    "protected-static-method",
                    "private-static-method",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "naming-convention": [
            true,
            { "type": "type", "format": "PascalCase" },
            { "type": "enumMember", "format": "PascalCase" }
        ],
        "new-parens": true,
        "no-angle-bracket-type-assertion": true,
        "no-arguments": true,
        "no-any": true,
        "no-banned-terms": true,
        "no-boolean-literal-compare": true,
        "no-conditional-assignment": true,
        "no-console": [true, "debug", "log", "info"],
        "no-construct": true,
        "no-debugger": true,
        "no-default-export": true,
        "no-duplicate-imports": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-empty": true,
        "no-eval": true,
        "no-invalid-template-strings": true,
        "no-invalid-this": true,
        "no-namespace": true,
        "no-parameter-reassignment": true,
        "no-relative-imports": true,
        "no-restricted-globals": true,
        "no-return-await": true,
        "no-shadowed-variable": true,
        "no-sparse-arrays": true,
        "no-static-this": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-tautology-expression": true,
        "no-this-assignment": [true, { "allow-destructuring": true }],
        "no-typeof-undefined": true,
        "no-unnecessary-class": true,
        "no-unnecessary-else": true,
        "no-unnecessary-type-assertion": true,
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-useless-files": true,
        "no-with-statement": true,
        "no-var-keyword": true,
        "object-literal-shorthand": true,
        "one-variable-per-declaration": { "options": ["ignore-for-loop"] },
        "only-arrow-functions": true,
        "ordered-imports": [
            true,
            {
                "grouped-imports": true,
                "groups": [
                    {
                        "name": "third-party code",
                        "match": "^(fast-deep-equal|json5|parse-function)",
                        "order": 1
                    },
                    {
                        "name": "typescript",
                        "match": "\\.ts$",
                        "order": 2
                    }
                ]
            }
        ],
        "prefer-const": [true, { "destructuring": "all" }],
        "prefer-method-signature": true,
        "prefer-object-spread": true,
        "prefer-readonly": true,
        "promise-must-complete": true,
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape",
            "avoid-template"
        ],
        "radix": true,
        "strict-type-predicates": true,
        "triple-equals": true,
        "typedef-assigned-arrow": true,
        "use-isnan": true,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-pascal-case",
                "allow-snake-case",
                "allow-leading-underscore"
            ]
        }
    },
    "rulesDirectory": [
        "node_modules/tslint/lib/rules",
    ],
    "linterOptions": {
        "exclude": ["**/*.json"]
    }
}
